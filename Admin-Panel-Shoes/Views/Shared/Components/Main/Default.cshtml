@model List<Main>
<section class="main-21">
    @foreach (var item in Model)
    {
        <div class="main" id="Home">
            <div class="main_content">
                <div class="main_text">
                    <h1>
                        @item.MainTitle
                    </h1>
                    <p>
                        @item.MainDescription
                    </p>
                </div>
                <div class="main_image">
                    <img src="@item.MainImage" />
                    @* <img src="~/Shoes-Website/image/shoes.png"/> *@
                </div>
            </div>
            <div class="social_icon">
                <i class="fa-brands @item.MainSocialMediaIconName"></i>
                <i class="fa-brands @item.MainSocialMediaIconName"></i>
                @* <i class="fa-brands fa-facebook-f"></i> *@
            </div>
            <div class="button">
                <a href="#">SHOP NOW</a>
            </div>
        </div>
    }
</section>