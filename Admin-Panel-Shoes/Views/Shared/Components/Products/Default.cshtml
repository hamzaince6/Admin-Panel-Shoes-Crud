@model List<Products>


<!--Products-->

<div class="products" id="Products">
    <div class="categoryname">
        <ul class="filter-menu">
            <li data-target="all">Nike</li>
            <li data-target="all">Adidas</li>
            <li data-target="all">Hummel</li>
        </ul>
    </div>
        
    <div class="box">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="small_card">
                    <i class="fa-solid fa-heart"></i>
                    <i class="fa-solid fa-share"></i>
                </div>

                <div class="image">
                    <img src="@item.ProductsImage"/>
                </div>

                <div class="products_text">
                    <h2>@item.ProcuctsName</h2>
                    <p>@item.ProductsDescription</p>
                    <h3>@item.ProductsPrice</h3>
                    <div class="products_star">
                        @item.ProductsStar
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <a href="#" class="btn">Add To Cart</a>
                </div>
            </div>
        }
        @* //Max 8 adet ürün. *@
    </div>
    <div class="butonnn">
        <button class="button">
            ALL PRODUCTS
